{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT",
    "path": ["lua/?.lua", "lua/?/init.lua"]
  },
  "diagnostics": {
    "globals": ["vim"]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME/lua",
      "${3rd}/luv/library",
      "~/.local/share/nvim/site/pack/deps/opt",
      "~/.local/share/nvim/site/pack/deps/start"
    ],
    "checkThirdParty": false
  }
}
