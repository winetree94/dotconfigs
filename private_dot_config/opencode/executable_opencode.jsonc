{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": [
    "~/.config/opencode/general.md"
  ],
  "model": "anthropic/claude-opus-4-5",
  "small_model": "synthetic/hf:zai-org/GLM-4.7",
  "permission": {
    "bash": "allow",
    "edit": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "webfetch": "allow",
    "read": "allow",
    "write": "allow",
    "lsp": "allow"
  },
  "disabled_providers": [
    "openai",
    "minimax-cn",
    "minimax",
    "minimax-cn-coding-plan",
    "github-models",
    "github-copilot-enterprise"
  ],
  "provider": {
    "synthetic": {
      "models": {},
      "options": {
        "apiKey": "{env:SYNTHETIC_API_KEY}"
      }
    },
    "zai-coding-plan": {
      "models": {},
      "options": {
        "apiKey": "{env:Z_AI_API_KEY}"
      }
    },
    "nanogpt": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "NanoGPT",
      "options": {
        "apiKey": "{env:NANOGPT_API_KEY}",
        "baseURL": "https://nano-gpt.com/api/v1",
        "headers": {
          "Authorization": "Bearer {env:NANOGPT_API_KEY}"
        }
      },
      "models": {
        "zai-org/glm-4.7-flash-original": {
          "name": "GLM 4.7 Flash Original",
          "limit": { "context": 200000, "output": 128000 }
        },
        "zai-org/glm-4.7-flash-original:thinking": {
          "name": "GLM 4.7 Flash Original Thinking",
          "limit": { "context": 200000, "output": 128000 }
        },
        "zai-org/glm-4.7-original": {
          "name": "GLM 4.7 Original",
          "limit": { "context": 200000, "output": 65535 }
        },
        "zai-org/glm-4.7-original:thinking": {
          "name": "GLM 4.7 Original Thinking",
          "limit": { "context": 200000, "output": 65535 }
        },
        "moonshotai/kimi-k2.5": {
          "name": "Kimi K2.5",
          "limit": { "context": 256000, "output": 65535 }
        },
        "moonshotai/kimi-k2.5:thinking": {
          "name": "Kimi K2.5 Thinking",
          "limit": { "context": 256000, "output": 65535 }
        }
      }
    },
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "google/gemma-3-4b": {
          "name": "Gemma 3 4b (local)"
        }
      }
    }
  },
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PAT}"
      }
    },
    "web-reader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}"
      }
    },
    "web-search-prime": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}"
      }
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  },
  "plugin": [
    "opencode-anthropic-auth@latest"
  ]
}
