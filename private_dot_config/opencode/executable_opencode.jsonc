{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "instructions": [
    "~/.config/opencode/general.md"
  ],
  // "theme": "catppuccin",
  // "small_model": "openrouter/x-ai/grok-4-fast:free",
  // "model": "openrouter/x-ai/grok-4-fast:free",
  // "model": "anthropic/claude-sonnet-4-20250514",
  // "model": "zai-coding-plan/glm-4.7",
  // "small_model": "zai-coding-plan/glm-4.5-air",
  // "model": "github-copilot/claude-opus-4.5",
  // "small_model": "github-copilot/claude-haiku-4.5",
  // "model": "minimax/MiniMax-M2.1",
  // "small_model": "minimax/MiniMax-M2.1",
  // "model": "minimax/MiniMax-M2.1",
  // "small_model": "minimax/MiniMax-M2.1",
  // "model": "synthetic/kimi-k2.5",
  // "small_model": "synthetic/kimi-k2.5",
  "model": "anthropic/claude-opus-4-5",
  "small_model": "synthetic/hf:zai-org/GLM-4.7",
  "permission": {
    "bash": "allow",
    "edit": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "webfetch": "allow",
    "read": "allow",
    "write": "allow",
    "lsp": "allow"
  },
  "provider": {
    "synthetic": {
      "models": {},
      "options": {
        "apiKey": "{env:SYNTHETIC_API_KEY}"
      }
    },
    "zai-coding-plan": {
      "models": {},
      "options": {
        "apiKey": "{env:Z_AI_API_KEY}"
      }
    },
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio (local)",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1"
      },
      "models": {
        "google/gemma-3-4b": {
          "name": "Gemma 3 4b (local)"
        }
      }
    }
  },
  "mcp": {
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_PAT}"
      }
    },
    "web-reader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}"
      }
    },
    "web-search-prime": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": {
        "Authorization": "Bearer {env:Z_AI_API_KEY}"
      }
    },
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    }
  },
  "plugin": [
    "opencode-anthropic-auth@latest"
  ]
}
